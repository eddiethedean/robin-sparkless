{
  "name": "with_url_encode",
  "pyspark_version": "3.5.0",
  "input": {
    "schema": [
      {
        "name": "id",
        "type": "bigint"
      },
      {
        "name": "s",
        "type": "string"
      }
    ],
    "rows": [
      [
        1,
        "hello world"
      ],
      [
        2,
        "a+b"
      ]
    ]
  },
  "operations": [
    {
      "op": "withColumn",
      "column": "encoded",
      "expr": "url_encode(col('s'))"
    },
    {
      "op": "select",
      "columns": [
        "id",
        "encoded"
      ]
    }
  ],
  "expected": {
    "schema": [
      {
        "name": "id",
        "type": "bigint"
      },
      {
        "name": "encoded",
        "type": "string"
      }
    ],
    "rows": [
      [
        1,
        "hello+world"
      ],
      [
        2,
        "a%2Bb"
      ]
    ]
  }
}