{
  "name": "filter_and_select_core",
  "pyspark_version": "3.5.0",
  "input": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "age", "type": "bigint" },
      { "name": "name", "type": "string" }
    ],
    "rows": [
      [1, 25, "Alice"],
      [2, 30, "Bob"],
      [3, 35, "Carol"]
    ]
  },
  "operations": [
    { "op": "filter", "expr": "col('age') > 28" },
    { "op": "select", "columns": ["id", "name"] }
  ],
  "expected": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "name", "type": "string" }
    ],
    "rows": [
      [2, "Bob"],
      [3, "Carol"]
    ]
  }
}

