{
  "name": "array_size",
  "pyspark_version": "3.5.0",
  "input": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "s", "type": "string" }
    ],
    "rows": [
      [1, "a|b|c"],
      [2, "x|y"],
      [3, "z"]
    ]
  },
  "operations": [
    {
      "op": "withColumn",
      "column": "arr",
      "expr": "split(col('s'), '|')"
    },
    {
      "op": "withColumn",
      "column": "len",
      "expr": "size(col('arr'))"
    },
    { "op": "select", "columns": ["id", "s", "arr", "len"] }
  ],
  "expected": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "s", "type": "string" },
      { "name": "arr", "type": "array<string>" },
      { "name": "len", "type": "int" }
    ],
    "rows": [
      [1, "a|b|c", ["a", "b", "c"], 3],
      [2, "x|y", ["x", "y"], 2],
      [3, "z", ["z"], 1]
    ]
  }
}
