{
  "name": "assert_true_err_msg",
  "pyspark_version": "3.5.0",
  "input": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "ok", "type": "boolean" }
    ],
    "rows": [
      [1, true],
      [2, true],
      [3, true]
    ]
  },
  "operations": [
    { "op": "withColumn", "column": "check", "expr": "assert_true(col('ok'), 'custom message')" },
    { "op": "select", "columns": ["id", "ok", "check"] },
    { "op": "orderBy", "columns": ["id"], "ascending": [true] }
  ],
  "expected": {
    "schema": [
      { "name": "id", "type": "bigint" },
      { "name": "ok", "type": "boolean" },
      { "name": "check", "type": "boolean" }
    ],
    "rows": [
      [1, true, true],
      [2, true, true],
      [3, true, true]
    ]
  }
}
