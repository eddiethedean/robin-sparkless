{
  "name": "to_char_format",
  "pyspark_version": "3.5.0",
  "input": {
    "schema": [
      { "name": "id", "type": "int" },
      { "name": "ts", "type": "timestamp" }
    ],
    "rows": [
      [1, "2024-03-15T14:30:00.000000"],
      [2, "1970-01-01T00:00:00.000000"]
    ]
  },
  "operations": [
    { "op": "withColumn", "column": "fmt", "expr": "to_char(col('ts'), 'yyyy-MM')" },
    { "op": "select", "columns": ["id", "fmt"] }
  ],
  "expected": {
    "schema": [
      { "name": "id", "type": "int" },
      { "name": "fmt", "type": "string" }
    ],
    "rows": [
      [1, "2024-03"],
      [2, "1970-01"]
    ]
  }
}
